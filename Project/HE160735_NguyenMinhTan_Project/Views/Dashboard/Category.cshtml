@using HE160735_NguyenMinhTan_Project.Models;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Category> categories = (List<Category>)ViewData["Categories"];
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4">
                    <h5 class="card-title fw-semibold mb-4">List Category</h5>
                    <a href="/Dashboard/CategoryCreate" class="fw-semibold mb-0 fs-4">Create</a>
                    <div class="mb-3">
                        @if (ViewData["message"] != null)
                        {
                            <div>@ViewData["message"]</div>
                        }
                    </div>
                    <div class="table-responsive">
                        <table class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                                <tr>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Category_Id</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Category_Name</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Action</h6>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Category item in categories)
                                {
                                    <tr>
                                        <td class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0 fs-4">@item.CategoryId</h6>
                                        </td>
                                        <td class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0 fs-4">@item.CategoryName</h6>
                                        </td>
                                        <td class="border-bottom-0">
                                            <div style="display: flex">
                                                <div style="margin-right: 10px;">
                                                    <a href="/Dashboard/CategoryEdit?cateid=@item.CategoryId" class="fw-semibold mb-0 fs-4">Edit</a>
                                                </div>
                                                <div>
                                                    <a href="/Dashboard/CategoryDelete?cateid=@item.CategoryId" class="fw-semibold mb-0 fs-4">Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

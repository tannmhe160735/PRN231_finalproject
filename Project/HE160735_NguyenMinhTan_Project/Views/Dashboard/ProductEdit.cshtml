    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Food food = (Food)ViewData["Food"];
    List<Category> categories = (List<Category>)ViewData["Categories"];
}
<div class="container-fluid">
    <div class="row">
        <!-- ======= Book A Table Section ======= -->

        <div class="section-header">
            <h2>Edit Food</h2>
        </div>

        <div class="">
            @using (Html.BeginForm("ProductEdit", "Dashboard", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-lg-12 col-md-12" style="margin-bottom: 20px">
                        <input type="text" name="foodId" class="form-control" id="foodId" placeholder="Food Id" value="@food.FoodId" readonly="readonly">
                        <div class="validate"></div>
                    </div>
                    <div class="col-lg-12 col-md-12" style="margin-bottom: 20px">
                        <input type="text" class="form-control" name="foodName" id="foodName" placeholder="Food Name" value="@food.FoodName">
                        <div class="validate"></div>
                    </div>
                    <div class="col-lg-12 col-md-12" style="margin-bottom: 20px">
                        <input type="text" class="form-control" name="foodDes" id="foodDes" placeholder="Food Description" value="@food.FoodDescription">
                        <div class="validate"></div>
                    </div>
                    <div class="col-lg-12 col-md-12" style="margin-bottom: 20px">
                        <input type="number" class="form-control" name="foodPrice" id="foodPrice" placeholder="Food Price" value="@food.FoodPrice">
                        <div class="validate"></div>
                    </div>
                    <div class="col-lg-12 col-md-12" style="margin-bottom: 20px">
                        <select name="category" class="form-control">
                            @foreach (var item in categories)
                            {
                                @if (food.FoodCategory == item.CategoryId)
                                {
                                    <option class="form-control" value="@item.CategoryId" selected="selected">@item.CategoryName</option>
                                }
                                else
                                {
                                    <option class="form-control" value="@item.CategoryId">@item.CategoryName</option>
                                }
                            }
                        </select>
                        <div class="validate"></div>
                    </div>
                    <div>
                        <div class="col-lg-12 col-md-12" style="margin-bottom: 20px">
                            <textarea type="text" class="form-control" name="foodUrl" id="foodUrl" placeholder="Food Url">@food.FoodImage</textarea>
                            <div class="validate"></div>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    @if (ViewData["message"] != null)
                    {
                        <div>@ViewData["message"]</div>
                    }
                </div>
                <div class="text-center">
                    <button type="submit" style="background: var(--color-primary);border: 0;padding: 14px 60px;color: #fff;transition: 0.4s;border-radius: 50px;background: #ec2727;">
                        Update Product
                    </button>
                </div>
            }
        </div>
    </div>
</div>
